<div class="post">
  <div class="post-content">
  <div class="post-title">
  <h3><%=@post.title%> by <%=@post.user.name%></h3>
  <%=form_with :url => user_like_path(@user, @post), :method => :post, :class => 'new-like' do |f|%>
    <%= f.button nil, class: "button_green" do %>
      <%= icon('fa-solid', 'thumbs-up', class: 'like')%>
    <% end %>
  <%end%>
</div>    <h4>Comments: <%=@post.comments_counter%>, Likes: <%=@post.likes_counter%></h4>
    <p><%=@post.text%></p>
  </div>
  <div class="post--comments">
    <h3>Comments</h3>
    <%@post.comments.each do |comment|%>
      <div class="comment">
        <p><span><%=comment.author.name%></span>:&nbsp;<%=comment.text%></p>
        <p></p>
      </div>
    <%end%>
  </div>
</div>